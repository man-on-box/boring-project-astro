---
import AlertIcon from "../assets/icon-alert.svg";
import ChartIcon from "../assets/icon-chart.svg";
import CodeIcon from "../assets/icon-code.svg";
import CubeIcon from "../assets/icon-cube.svg";

interface Props {
  value: string;
  label: string;
  icon?: string;
}

const { value, label, icon } = Astro.props;

const getIcon = (icon: string) => {
  switch (icon) {
    case "alert":
      return AlertIcon;
    case "chart":
      return ChartIcon;
    case "cube":
      return CubeIcon;
    default:
      return CodeIcon;
  }
};
const Icon = getIcon(icon || "");
---

<div
  class="flex flex-col items-center justify-center p-6 bg-white rounded-lg border border-pink-100 shadow-md hover:shadow-lg transition-all hover:border-pink-200 group"
>
  <div
    class="p-3 bg-pink-50 rounded-full mb-3 text-pink-500 group-hover:bg-pink-100 transition-colors"
  >
    <Icon />
  </div>
  <p class="text-3xl font-bold group-hover:text-pink-600 transition-colors">
    {value}
  </p>
  <p class="text-muted-foreground">{label}</p>
</div>
